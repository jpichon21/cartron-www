                                        <li {% if (app.request.get('_route') == 'admin_degustation_pro' or app.request.get('_route') == 'admin_manage_degustation_pro' or app.request.get('_route') == 'admin_manage_sous_menu_degustation_pro') %}class="sub_show"{% endif %}><a href="{{ path('admin_degustation_pro') }}">Dégustation</a></li>
                                        <li {% if (app.request.get('_route') == 'admin_menu_pro') %}class="sub_show"{% endif %}><a href="{{ path('admin_menu_pro') }}">Autres Menu</a></li>
