                                    <ul class="sub">
                                        <li {% if app.request.get('_route') == 'admin_homepage' %}class="sub_show"{% endif %}><a href="{{ path('admin_homepage') }}">Liste des articles</a></li>
                                        <li {% if app.request.get('_route') == 'admin_homepage_add_article' %}class="sub_show"{% endif %}><a href="{{ path('admin_homepage_add_article') }}">Ajouter un article</a></li>
                                        <li {% if app.request.get('_route') == 'admin_homepage_add_video' %}class="sub_show"{% endif %}><a href="{{ path('admin_homepage_add_video', { 'id': 1 }) }}">Video</a></li>
                                    </ul>
                                </div>
                                <!--[if lte IE 6]></td></tr></table></a><![endif]-->
                            </li>
                        </ul>

                        <div class="nav-divider">&nbsp;</div>

                        <ul {% if (app.request.get('_route') == 'admin_sous_menu' or app.request.get('_route') == 'admin_add_sous_menu' or app.request.get('_route') == 'admin_collection' or app.request.get('_route') == 'admin_add_collection') %} class="current" {% else %} class="select" {% endif %} ><li><a href="{{ path('admin_collection') }}"><b>Collection</b><!--[if IE 7]><!--></a><!--<![endif]-->
                                <!--[if lte IE 6]><table><tr><td><![endif]-->
                                <div class="select_sub show">
                                    <ul class="sub">
                                        <li {% if app.request.get('_route') == 'admin_collection' %}class="sub_show"{% endif %}><a href="{{ path('admin_collection') }}">Collection</a></li>
                                        <li {% if app.request.get('_route') == 'admin_add_collection' %}class="sub_show"{% endif %}><a href="{{ path('admin_add_collection') }}">Ajouter une collection</a></li>
                                        <li {% if app.request.get('_route') == 'admin_sous_menu' %}class="sub_show"{% endif %}><a href="{{ path('admin_sous_menu') }}">Sous menu collection</a></li>
                                        <li {% if app.request.get('_route') == 'admin_add_sous_menu' %}class="sub_show"{% endif %}><a href="{{ path('admin_add_sous_menu') }}">Ajouter un sous menu collection</a></li>
                                    </ul>
                                </div>
                                <!--[if lte IE 6]></td></tr></table></a><![endif]-->
                            </li>
                        </ul>

                        <div class="nav-divider">&nbsp;</div>


                        <ul {% if (app.request.get('_route') == 'admin_sous_menu_degustation' or app.request.get('_route') == 'admin_add_sous_menu_degustation' or app.request.get('_route') == 'admin_degustation' or app.request.get('_route') == 'admin_add_degustation') %} class="current" {% else %} class="select" {% endif %} ><li><a href="{{ path('admin_degustation') }}"><b>Dégustation</b><!--[if IE 7]><!--></a><!--<![endif]-->
                                <!--[if lte IE 6]><table><tr><td><![endif]-->
                                <div class="select_sub show">
                                    <ul class="sub">
                                        <li {% if app.request.get('_route') == 'admin_degustation' %}class="sub_show"{% endif %}><a href="{{ path('admin_degustation') }}">Dégustation</a></li>
                                        <li {% if app.request.get('_route') == 'admin_add_degustation' %}class="sub_show"{% endif %}><a href="{{ path('admin_add_degustation') }}">Ajouter une Dégustation</a></li>
                                        <li {% if app.request.get('_route') == 'admin_sous_menu_degustation' %}class="sub_show"{% endif %}><a href="{{ path('admin_sous_menu_degustation') }}">Sous menu dégustation</a></li>
                                        <li {% if app.request.get('_route') == 'admin_add_sous_menu_degustation' %}class="sub_show"{% endif %}><a href="{{ path('admin_add_sous_menu_degustation') }}">Ajouter un sous menu dégustation</a></li>
                                    </ul>
                                </div>
                                <!--[if lte IE 6]></td></tr></table></a><![endif]-->
                            </li>
                        </ul>

