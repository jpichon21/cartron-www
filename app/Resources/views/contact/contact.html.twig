{% extends "layout.html.twig" %}
{% block title %}JOSEPH CARTRON{% endblock %}
{% block body %}

<div id="contact">
    <div class="main">
        <div class="espacePro">
            <h2 class="contact">{{"Contact"|trans}}</h2>
            {% if status %}
        	    <p class="address">{{ "Votre message a bien été envoyé"|trans }}</p>
            {% endif %}
            {{ form_start(form, { 'attr': {'id': 'formContact'}})}}
                {{ form_widget(form.nom) }}
                {{ form_widget(form.prenom) }}
                {{ form_widget(form.email) }}
                {{ form_widget(form.societe) }}
                {{ form_widget(form.message) }}
                <label id="consentement">
                    {{ form_widget(form.consentement) }}
                    {{ 'contact.consentement'|trans }}
                </label>
                <br clear="all" />
                <div class="valider">
                    {{ form_rest(form) }}
                    {{ form_widget(form.submit, { 'label': 'Valider' }) }}
                </div>
            {{ form_end(form) }}
            </form>
            <p class="address">25, RUE DU DOCTEUR LEGRAND –  CS 30028   /   21701 NUITS-SAINT-GEORGES CEDEX - FRANCE<br />
			  TEL : +33 (0)3 80 62 00 90   /   MAIL : cartron [at] cartron.fr</p>
        </div>    
    </div>
</div>
{% endblock %}
