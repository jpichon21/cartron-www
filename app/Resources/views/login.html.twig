{% extends "layout.html.twig" %}
{% block title %}JOSEPH CARTRON{% endblock %}
{% block body %}
<link rel="stylesheet" href="{{ asset('site/css/login.css') }}" type="text/css" media="screen" title="default" />
<body id="login-bg"> 
 
<!-- Start: login-holder -->
<div id="login-holder">
	<div class="clear"></div>
	<!--  start loginbox ................................................................................. -->
	<div id="loginbox">
	<h2> {{ "Se connecter" |trans}}</h2>
	<!--  start login-inner -->
	<div id="login-inner">
		<form action="{{ path('login') }}" method="post">
		{% if error %}
        	<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    	{% endif %}
			<table border="0" cellpadding="0" cellspacing="0">
				<tr>
					<th {% if(error) %} style=" color:red" {% endif %}></th>
					<td><input class="login-inp" type="text" id="username" name="_username" placeholder={{ "Identifiant" |trans}}  value="{{ last_username }}" /></td>
				</tr>
				<tr>
					<th {% if(error) %} style=" color:red" {% endif %}></th>
					<td><input class="login-inp" type="password" id="password" name="_password" value="Password"/></td>
				</tr>
				<tr>
					<th></th>
					<td><button class ="submit-login" type="submit" class="button-primary">OK</button></td>
				</tr>
				<tr>
					<td class="separator"></td>
				</tr>
			</table>
			{% if access == 'pro' %}
				<input type="hidden" name="_target_path" value="{{ path('pro_accueil') }}"/>
			{% endif %}
        <form>
		<a id="to_login" href="{{ path('request_access') }}">{{ "Demander un accès à l'espace professionnel" |trans}} →</a>
	</div>
	<div class="clear"></div>
 </div>
 <!--  end loginbox -->

</div>
<!-- End: login-holder -->
</body>
{% endblock %}
