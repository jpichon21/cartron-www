                    <a href="{{ path('logout') }}" id="logout"><img src="{{ asset('admin/images/shared/nav/nav_deconnexion.gif')}}" width="110" height="14" alt="" /></a>
                    <div class="clear">&nbsp;</div>
                </div>
                <!--  start nav -->
                <div class="nav">
                    <div class="table">

                        <ul {% if (app.request.get('_route') == 'admin_homepage' or app.request.get('_route') == 'admin_homepage_add_article' or app.request.get('_route') == 'admin_homepage_add_video') %} class="current" {% else %} class="select" {% endif %}><li><a href="{{ path('admin_homepage') }}"><b>Page d'accueil</b><!--[if IE 7]><!--></a><!--<![endif]-->
                                <!--[if lte IE 6]><table><tr><td><![endif]-->
